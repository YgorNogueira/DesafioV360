<body class="bg-dark text-white">
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <main class="form-signin w-100 text-center p-4" style="max-width: 330px;">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation d-grid gap-4' }) do |f| %>
        <!-- TÃ­tulo -->
        <h1 class="h3 fw-normal mb-4">Sign up</h1>

        <!-- Email -->
        <div class="form-floating">
          <%= f.email_field :email, class: "form-control", id: "floatingEmail", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
          <label for="floatingEmail" class="text-dark">Email address</label>
        </div>

        <!-- Name -->
        <div class="form-floating">
          <%= f.text_field :name, class: "form-control", id: "floatingName", placeholder: "Your Name", autocomplete: "name" %>
          <label for="floatingName" class="text-dark">Name</label>
        </div>

        <!-- Password -->
        <div class="form-floating">
          <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "new-password" %>
          <label for="floatingPassword" class="text-dark">Password</label>
        </div>

        <!-- Password Confirmation -->
        <div class="form-floating">
          <%= f.password_field :password_confirmation, class: "form-control", id: "floatingPasswordConfirmation", placeholder: "Confirm Password", autocomplete: "new-password" %>
          <label for="floatingPasswordConfirmation" class="text-dark">Confirm Password</label>
        </div>

        <!-- Sign Up Button -->
        <div class="d-grid">
          <%= f.submit "Sign up", class: "btn btn-lg btn-primary" %>
        </div>

      <% end %>

      <!-- Links adicionais do Devise -->
      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </main>
  </div>
</body>
