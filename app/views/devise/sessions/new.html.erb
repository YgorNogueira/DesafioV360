<body class="bg-dark text-white">
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <main class="form-signin w-100 text-center" style="max-width: 330px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
        <!-- Imagem centralizada -->
          <div class="text-center">
            <%= image_tag("icon_checkbox.jpg", class: "mb-4 rounded-circle", alt: "Checkbox Icon", width: "72", height: "57") %>
          </div>

        <!-- Título -->
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <!-- Email -->
        <div class="form-floating">
          <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
          <label for="floatingInput" class="text-dark">Email address</label>
        </div>

        <!-- Password -->
        <div class="form-floating mt-3">
          <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "current-password" %>
          <label for="floatingPassword" class="text-dark">Password</label>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="checkbox my-3 text-start">
            <label>
              <%= f.check_box :remember_me, class: 'me-1' %>
              Remember me
            </label>
          </div>
        <% end %>

        <!-- Botão Sign in -->
        <%= f.submit "Sign in", class: "w-100 btn btn-lg btn-primary" %>

        <!-- Footer -->
        <p class="mt-5 mb-3 text-muted">© <%= Time.current.year %></p>
      <% end %>

      <!-- Links adicionais do Devise -->
      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </main>
  </div>
</body>
