<body class="bg-dark text-white">
<div class="container mt-5">
  <!-- Título da Página -->
  <div class="text-center mb-4">
    <h1 class="display-5">Edit To-Do</h1>
    <p class="text-white">Update your to-do details below.</p>
  </div>

  <!-- Formulário de Edição -->
  <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
    <%= form_with model: @todo, local: true, class: "needs-validation" do |f| %>
      <div class="mb-3">
        <%= f.label :name, "To-Do Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter the to-do name" %>
      </div>

      <!-- Botões de Ação -->
      <div class="d-flex justify-content-between mt-4">
        <%= f.submit "Update To-Do", class: "btn btn-primary" %>
        <%= link_to "Cancel", todos_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
</body>
